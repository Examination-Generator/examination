# Production Environment Variables for Vercel
# Copy these to your Vercel project settings as environment variables

# PostgreSQL Configuration (Vercel Postgres)
# These will be auto-populated by Vercel Postgres addon
POSTGRES_URL=
POSTGRES_PRISMA_URL=
POSTGRES_URL_NON_POOLING=
POSTGRES_USER=
POSTGRES_HOST=
POSTGRES_PASSWORD=
POSTGRES_DATABASE=

# Django Configuration
SECRET_KEY=your-production-secret-key-change-this-to-random-string
DEBUG=False
ALLOWED_HOSTS=.vercel.app

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-change-this-to-random-string
JWT_ALGORITHM=HS256
JWT_EXPIRATION_DAYS=7

# CORS Configuration (Update with your Vercel frontend URL)
CORS_ALLOWED_ORIGINS=https://your-app.vercel.app

# SMS Provider Configuration (Optional)
SMS_PROVIDER=
SMS_API_KEY=
SMS_SENDER_ID=ExamSystem

# Database URL (Vercel Postgres format)
DATABASE_URL=
